extends ../layouts/general
block content
    h1 Edit Room
    form(method="POST" action="/rooms/"+room.id+"/edit"+"?_method=PUT" id="form" class="needs-validation" novalidate enctype="multipart/form-data" )
        .from-group
            label(for="room_id") Số phòng
            input#room_id.form-control(name="room_id" type="text" value = room.room_id)
            .invalid-feedback Bạn cần phải nhập số phòng
        .from-group.mb-3
            label(for="room_type") Loại phòng
            select#room_type.form-select(name="room_type" aria-label='Default select example')
                option(value='Standard') Standard 
                option(value='Superior') Superior
                option(value='Deluxe') Deluxe
                option(value='Luxury') Luxury
            .invalid-feedback Bạn cần chọn loại phòng
        .from-group.mb-3
            label(for="note") Ghi chú
            input#note.form-control(name="note" type="text" value = room.note)    
        .from-group.mb-3
            label(for="image") Ảnh
            input#avatar.form-control(type="file" name="image" multiple)
    button.btn.btn-dark(type='button', data-bs-toggle='modal', data-bs-target='#exampleModal') Edit
    #exampleModal.modal.fade(tabindex='-1', aria-labelledby='exampleModalLabel', aria-hidden='true')
        .modal-dialog.modal-dialog-centered
            .modal-content
                .modal-header
                    h5#exampleModalLabel.modal-title Confirmation
                    button.btn-close(type='button', data-bs-dismiss='modal', aria-label='Close')
                .modal-body Are you sure you want to edit room information ?
                .modal-footer
                    button.btn.btn-secondary(type='button', data-bs-dismiss='modal') Cancel
                    button.btn.btn-dark(type='submit' form="form") Edit
    script(src='/js/form-validation.js')