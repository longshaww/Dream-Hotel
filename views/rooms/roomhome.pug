extends ../layouts/general
block content 
    h1 Rooms
    .d-flex.align-items-center
        .d-flex.mr-auto     
            a(href="/rooms/create" class="btn btn-dark m-2") Create
            a(href=`/rooms/checkin` class="btn btn-dark m-2") Checkin
            a(href=`#` class="btn btn-dark m-2") Checkout
        form(action="/rooms/search",method="GET" class="d-flex ml-auto")
            input(type="text", name="q" class="form-control")
            button(class="btn btn-dark ml-4") Search
    .d-flex.flex-wrap
        each room in rooms
            ul.card.list-unstyled.shadow-lg.m-2(class=room.Rent[0] ? "text-white bg-dark mb-3":"text-dark bg-light mb-3")
                h5.card-header="Phòng "+room.room_id
                .card-body
                    li="Loại phòng: "+room.room_type
                    li="Giá phòng: "+room.price 
                    li="Ghi chú: "+room.note 
                    if(room.Rent[0] != null)
                        li="Tên khách: "+ room.Rent[0].customer_info[0].name
                        li="Checkin: "+room.Rent[0].checkin_date
                        li="Checkout: "+room.Rent[0].checkout_date
                    a(href="/rooms/"+room._id class="btn btn-primary") View