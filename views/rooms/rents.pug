extends ../layouts/general
block content
    .d-flex
        h1 Rent history 
        .me-auto
            form(action="",method="GET" class="d-flex")
                select.form-select(name="q" aria-label='Default select example')
                    option(selected='' value="") Select a month
                    option(value='1') January
                    option(value='2') February
                    option(value='3') March
                    option(value='4') April
                    option(value='5') May
                    option(value='6') June
                    option(value='7') July
                    option(value='8') August
                    option(value='9') September
                    option(value='10') October
                    option(value='11') November
                    option(value='12') December
                button.btn.btn-dark.ms-2(type="submit") Search
        .ms-auto
            h2.text-center Phòng còn
            form(action="/rooms/rents/search",method="GET" class="d-flex")
                input(type="text", name="q" class="form-control" placeholder="Nhập ngày")
                button(class="btn btn-dark ms-3") Search
    .row
        .col-md-8
            .table-responsive
                table.table
                    thead 
                        tr  
                            th Tên khách 
                            th Phone 
                            th CMND
                            th Loại phòng 
                            th Ngày checkin 
                            th Ngày checkout
                            th Confirmation
                            th Trạng thái
                    tbody 
                        each rent in rents
                            tr 
                                td=rent.name
                                td=rent.phone 
                                td=rent.CMND 
                                td=rent.room_type 
                                td=rent.checkin_date                          
                                td=rent.checkout_date 
                                td
                                    if(rent.state) 
                                        a.btn.btn-dark(href="/rooms/rents/"+rent._id class="disabled") Confirm
                                    else
                                        a.btn.btn-dark(href="/rooms/rents/"+rent._id class) Confirm
                                if(rent.state)
                                    td Đã xác nhận
                                else 
                                    td Chưa xác nhận

        .col-md-4
            .row(class="row-cols-1 row-cols-sm-1 row-cols-lg-2")
                each room in rooms
                    .col.text-center
                        ul.card.list-unstyled.shadow-lg.m-2.border-success(class= "text-dark bg-light mb-3")
                            h5.card-header="Phòng "+room.room_id
                            .card-body
                                li="Loại phòng: "+room.room_type
