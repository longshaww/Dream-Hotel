extends ../layouts/general
block content
    
    .row.row-cols-2
        .col
            h1 Check in 
            if errors
                each error in errors 
                    .alert.alert-danger=error        
            form(method="POST" action="/rooms/checkin")
                .from-group
                    label(for="name") Tên khách
                    input#name.form-control(name="name" type="text")
                .from-group.mb-3
                    label(for="phone") SĐT
                    input#phone.form-control(name="phone" type="text")
                .from-group.mb-3
                    label(for="room_id") Phòng
                    input#room_id.form-control(name="room_id" type="text")
                .from-group.mb-3
                    label(for="checkout_date") Ngày Checkout
                    input#checkout_date.form-control(name="checkout_date" type="text")
                button.btn.btn-primary Checkin
        .col.text-center
            h2 Khách hàng đã đặt trước
            each customer in customers
             ul.card.list-unstyled.shadow-lg.m-2(class="text-dark bg-light mb-3")
                h5.card-header="Khách: "+customer._id
                .card-body
                    li="Tên: "+customer.name 
                    li="Phone: "+customer.phone 
                    li="CMND: "+customer.CMND 
                    li="Loại phòng: "+customer.room_type 
                    li="Checkin: "+customer.checkin_date 
                    li="Checkout: "+customer.checkout_date
