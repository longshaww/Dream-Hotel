extends ../layouts/general
block content 
    h1 Login

    if errors
        each error in errors 
            .alert.alert-danger=error
    form(action="/auth/login" method="POST")
        .from-group
            label(for="email") Email
            input#email.form-control(name="email" type="text" value= values ? values.name :'')
        .from-group.mb-3
            label(for="password") Password
            input#password.form-control(name="password" type="password" value= values ? values.phone :'')
        button.btn.btn-primary Login

